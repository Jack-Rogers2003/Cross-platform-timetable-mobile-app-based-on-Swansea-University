<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/selectDay"
        android:layout_width="402dp"
        android:layout_height="46dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="402dp"
        android:dropDownHeight="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251" />

    <Spinner
        android:id="@+id/startTime"
        android:layout_width="402dp"
        android:layout_height="46dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="402dp"
        android:dropDownHeight="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389" />

    <Spinner
        android:id="@+id/eventLength"
        android:layout_width="402dp"
        android:layout_height="46dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="402dp"
        android:dropDownHeight="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTime"
        app:layout_constraintVertical_bias="0.18" />

    <Spinner
        android:id="@+id/selectCampus"
        android:layout_width="402dp"
        android:layout_height="46dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="402dp"
        android:dropDownHeight="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventLength"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/isEventReoccurring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tick if event is reocurring"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/selectSpecificDate"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:text="Select Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isEventReoccurring"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/submiRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toTopOf="@+id/exitButtonSociety"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectCampus"
        app:layout_constraintVertical_bias="0.848" />

    <Button
        android:id="@+id/exitButtonSociety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectCampus"
        app:layout_constraintVertical_bias="0.759" />

    <TextView
        android:id="@+id/selectDayHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Day Of Week"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/selectDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

    <TextView
        android:id="@+id/startTimeHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Start Time"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/startTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDay" />

    <TextView
        android:id="@+id/selectLengthOfEventHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Length Of Event In Hours"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/eventLength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTime" />

    <TextView
        android:id="@+id/selectCampusHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Campus"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/selectCampus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventLength" />

    <EditText
        android:id="@+id/sizeOfEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter minimum size needed"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/submiRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectCampus" />

</androidx.constraintlayout.widget.ConstraintLayout>